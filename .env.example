# Reactive Hook System Documentation Environment Variables

# =============================================================================
# Analytics Configuration
# =============================================================================

# Google Analytics 4
# Get your tracking ID from Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# PostHog Analytics (Alternative)
# Get your API key from PostHog dashboard
POSTHOG_API_KEY=phc_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# Search Configuration
# =============================================================================

# Algolia DocSearch
# Apply for DocSearch at https://docsearch.algolia.com/apply/
ALGOLIA_APP_ID=your_app_id
ALGOLIA_API_KEY=your_search_api_key
ALGOLIA_INDEX_NAME=reactive_hook_docs

# =============================================================================
# Deployment Configuration
# =============================================================================

# Site Configuration
SITE_URL=https://docs.reactive-hook.shogun.finance
BASE_URL=/

# GitHub Pages Deployment
GITHUB_USERNAME=shogun-finance
GITHUB_REPOSITORY=reactive-docs

# Vercel Deployment
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_org_id
VERCEL_PROJECT_ID=your_project_id

# Cloudflare Pages Deployment
CLOUDFLARE_API_TOKEN=your_cf_api_token
CLOUDFLARE_ACCOUNT_ID=your_cf_account_id
CLOUDFLARE_PROJECT_NAME=reactive-hook-docs

# =============================================================================
# Development Configuration
# =============================================================================

# Development Server
DEV_HOST=localhost
DEV_PORT=3000

# Build Configuration
NODE_ENV=production
BUILD_TARGET=static

# =============================================================================
# Content Configuration
# =============================================================================

# Edit URLs
EDIT_URL=https://github.com/shogun-finance/reactive-docs/tree/main/

# Social Links
GITHUB_URL=https://github.com/shogun-finance/reactive-hook
DISCORD_URL=https://discord.gg/shogun
TWITTER_URL=https://twitter.com/shogunfinance

# =============================================================================
# Network Configuration (for examples in docs)
# =============================================================================

# Ethereum Mainnet
MAINNET_RPC=https://eth.llamarpc.com
MAINNET_CHAIN_ID=1

# Reactive Network
REACTIVE_RPC=https://reactive-rpc.rnk.dev
REACTIVE_CHAIN_ID=5318008

# =============================================================================
# Contract Addresses (for examples in docs)
# =============================================================================

# Ethereum Mainnet Contracts
POOL_MANAGER_ADDRESS=0x000000000004444c5dc75cB358380D2e3dE08A90
POSITION_MANAGER_ADDRESS=0xbD216513d74C8cf14cf4747E6AaA6420FF64ee9e
HOOK_ADDRESS=0xcf8518c0ee072a5a2ef8de0585030086c89c4ac0

# Reactive Network Contracts
REACTIVE_ADDRESS=0x6428fbef03c165f7f6b918364dd824d8ee1fd242

# Example Strategy Address (replace with actual)
STRATEGY_ADDRESS=0xYourStrategyContractAddress

# =============================================================================
# Security Configuration
# =============================================================================

# Content Security Policy
CSP_ENABLED=true

# HTTPS Configuration
FORCE_HTTPS=true

# =============================================================================
# Performance Configuration
# =============================================================================

# Bundle Analysis
ANALYZE_BUNDLE=false

# Image Optimization
OPTIMIZE_IMAGES=true

# =============================================================================
# Monitoring Configuration
# =============================================================================

# Error Reporting (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Uptime Monitoring
UPTIME_ROBOT_API_KEY=your_uptime_robot_key

# =============================================================================
# Social Media Configuration
# =============================================================================

# Open Graph / Twitter Cards
OG_IMAGE_URL=https://docs.reactive-hook.shogun.finance/img/social-card.jpg
TWITTER_HANDLE=@shogunfinance

# =============================================================================
# Documentation Maintenance
# =============================================================================

# Last Updated
LAST_UPDATED_FORMAT=MMM DD, YYYY
SHOW_LAST_UPDATE=true

# Version Information
DOCS_VERSION=v0.1.0
SHOW_VERSION=true

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
ENABLE_DARK_MODE=true
ENABLE_SEARCH=true
ENABLE_ANALYTICS=true
ENABLE_EDIT_PAGE=true
ENABLE_READING_TIME=true

# =============================================================================
# API Configuration (if needed for dynamic content)
# =============================================================================

# GitHub API (for fetching repository information)
GITHUB_API_TOKEN=ghp_your_github_token

# =============================================================================
# Internationalization (i18n)
# =============================================================================

# Default locale
DEFAULT_LOCALE=en

# Supported locales (comma-separated)
SUPPORTED_LOCALES=en,es

# =============================================================================
# Development Tools
# =============================================================================

# Hot reload
HOT_RELOAD=true

# Source maps
SOURCE_MAPS=false

# Debug mode
DEBUG_MODE=false

# =============================================================================
# Notes for Setup
# =============================================================================

# 1. Copy this file to .env.local for development
# 2. Replace placeholder values with actual credentials
# 3. Never commit real environment variables to version control
# 4. Use GitHub Secrets for CI/CD environment variables
# 5. Some variables are optional and can be omitted
# 6. Analytics and search require external service setup